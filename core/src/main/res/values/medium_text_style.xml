<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Light TextView -->
    <style name="MediumTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/fonts_medium</item>
        <item name="android:textColor">@color/ink_base</item>
    </style>

    <style name="MediumTextView.Logo" parent="MediumTextView">
        <item name="android:textSize">@dimen/text_logo</item>
    </style>

    <style name="MediumTextView.Headline" parent="MediumTextView">
        <item name="android:textSize">@dimen/text_headline</item>
    </style>

    <style name="MediumTextView.Title" parent="MediumTextView">
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="MediumTextView.SubHeader" parent="MediumTextView">
        <item name="android:textSize">@dimen/text_sub_header</item>
    </style>

    <style name="MediumTextView.Topic" parent="MediumTextView">
        <item name="android:textSize">@dimen/text_topic</item>
    </style>

    <style name="MediumTextView.Body" parent="MediumTextView">
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="MediumTextView.Body.Small" parent="MediumTextView">
        <item name="android:textSize">@dimen/text_body_small</item>
    </style>

</resources>
