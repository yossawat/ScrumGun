<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:colorBackground">@color/white</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="FoodStory" parent="BaseFoodStory" />

    <style name="BaseFoodStory" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/needle_green_base</item>
        <item name="colorPrimaryDark">@color/neutral_40</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="DialogNoTitle">
        <item name="android:windowSoftInputMode">stateHidden|adjustPan</item>
        <item name="android:windowBackground">@color/black_transparent</item>
    </style>

    <style name="FoodStory.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/fonts_medium</item>
        <item name="cornerRadius">@dimen/radius_large</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_sub_header</item>
        <item name="android:paddingTop">@dimen/space_normal_12dp</item>
        <item name="android:paddingBottom">@dimen/space_normal_12dp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/selector_enabled_background_color</item>
    </style>

    <style name="FoodStory.Button.Ink" parent="FoodStory.Button">
        <item name="backgroundTint">@color/ink_30</item>
    </style>

    <style name="FoodStory.Button.Yellow" parent="FoodStory.Button">
        <item name="backgroundTint">@color/yellow_base</item>
    </style>

    <style name="FoodStory.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/fonts_medium</item>
        <item name="cornerRadius">@dimen/radius_large</item>
        <item name="android:textSize">@dimen/text_sub_header</item>
        <item name="android:paddingTop">@dimen/space_normal_12dp</item>
        <item name="android:paddingBottom">@dimen/space_normal_12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="strokeColor">@color/selector_enabled_stroke_color</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="FoodStory.OutlinedButton.Yellow" parent="FoodStory.OutlinedButton">
        <item name="strokeColor">@color/selector_enabled_stroke_yellow_color</item>
        <item name="android:textColor">@color/selector_enabled_text_yellow_color</item>
        <item name="rippleColor">@color/yellow_30</item>
    </style>

    <style name="FoodStory.OutlinedButton.Neutral" parent="FoodStory.OutlinedButton">
        <item name="strokeColor">@color/neutral_60</item>
        <item name="android:textColor">@color/selector_enabled_text_color</item>
        <item name="backgroundTint">@color/selector_enabled_background_neutral_color</item>
        <item name="rippleColor">@color/neutral_60</item>
    </style>

    <style name="FoodStory.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="errorTextAppearance">@style/RegularTextView.Body.Small</item>
        <item name="boxStrokeErrorColor">@color/red_base</item>
        <item name="errorTextColor">@color/red_base</item>
        <item name="errorIconTint">@color/red_base</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_large</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_large</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_large</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_large</item>
        <item name="boxStrokeColor">@color/selector_text_input_stroke_color</item>
    </style>

    <style name="FoodStory.TextInput.EditText">
        <item name="android:fontFamily">@font/fonts_regular</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/ink_base</item>
        <item name="android:paddingTop">@dimen/space_normal_10dp</item>
        <item name="android:paddingBottom">@dimen/space_normal_10dp</item>
        <item name="android:textColorHint">@color/ink_30</item>
    </style>

    <style name="FoodStory.TextInput.EditText.Large" parent="FoodStory.TextInput.EditText">
        <item name="android:textSize">@dimen/text_sub_header</item>
        <item name="android:paddingTop">@dimen/space_large</item>
        <item name="android:paddingBottom">@dimen/space_large</item>
    </style>

    <style name="FoodStory.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">@dimen/space_large</item>
        <item name="android:paddingEnd">@dimen/space_large</item>
        <item name="android:paddingTop">@dimen/space_normal</item>
        <item name="android:paddingBottom">@dimen/space_normal</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/text_button_text_color_selector</item>
    </style>

    <style name="ThemeOverlay" />

    <style name="ThemeOverlay.Neutral">
        <item name="colorPrimary">@color/ink_40</item>
        <item name="colorPrimaryVariant">@color/ink_30</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/ink_40</item>
    </style>

    <style name="SwitchTheme" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@color/needle_green_base</item>
        <item name="colorControlNormal">@color/neutral_40</item>
        <item name="android:fontFamily">@font/fonts_regular</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:textColor">@color/ink_base</item>
        <item name="android:textSize">@dimen/text_sub_header</item>
        <item name="colorControlActivated">@color/needle_green_base</item>
        <item name="colorControlNormal">@color/neutral_40</item>
        <item name="android:fontFamily">@font/fonts_regular</item>
    </style>

    <style name="Image">
        <item name="placeholderImage">@drawable/ic_image_error</item>
        <item name="placeholderImageScaleType">fitXY</item>
        <item name="actualImageScaleType">centerCrop</item>
        <item name="fadeDuration">100</item>
    </style>

    <style name="BottomSheetBackGround" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="colorPrimary">@color/needle_green_base</item>
        <item name="colorPrimaryDark">@color/neutral_base</item>
        <item name="colorAccent">@color/needle_green_base</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
